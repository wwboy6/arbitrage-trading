{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", // Use "ESNext" if you prefer ESM
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node" // Ensure Node.js-style resolution
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
